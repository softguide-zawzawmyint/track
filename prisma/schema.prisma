generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  
  // Location fields
  latitude     Float?
  longitude    Float?
  lookupSource String?  @default("coordinates")
  continent    String?  @default("Asia")
  continentCode String? @default("AS")
  countryName  String?  @default("Thailand")
  countryCode  String?  @default("TH")
  principalSubdivision String? @default("Bangkok")
  principalSubdivisionCode String? @default("TH-10")
  city         String?  @default("Bangkok")
  locality     String?  @default("Thung Wat Don")
  postcode     String?
  plusCode     String?  @default("7P52PG6J+PM")
  localityLanguageRequested String? @default("en")
  browserName String?
  browserVersion String?
  ipAddress String?
  userAgent String?

  
  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([latitude, longitude])
  @@index([countryCode])
  @@index([city])
}
